<odoo>

    <record id="forecast_catalogo_wizard_form_view" model="ir.ui.view">
        <field name="name">forecast.catalog.wizard.form</field>
        <field name="model">x.forecast.catalog.wizard</field>
        <field name="arch" type="xml">
            <form string="Información">
                <group string="Información General">
                    <field name="date_generate" />
                    <field name="message" string="" readonly="1" style="color:#dc6965" />
                </group>
                <footer>
                    <button name="generate_forecast_ventas" string="Generar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
